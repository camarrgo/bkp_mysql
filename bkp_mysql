drop table if exists nossos_servicos;
drop table if exists tamplate_barbearia;

create table tamplate_barbearia(
id int not null auto_increment primary key,
titulo_servicos varchar(30),
sub_titulo_servicos varchar(150),
titulo_horarios varchar(30),
sub_titulo_horarios varchar(150),
titulo_precos varchar(30),
sub_titulo_precos varchar(150),
titulo_funcionarios varchar(30),
sub_titulo_funcionarios varchar(150)
);
select * from tamplate_barbearia;


create table nossos_servicos(
id int not null auto_increment primary key,
titulo_topico varchar(30),
descricao_topico varchar(300),
img_topico varchar(100)
);

SELECT * FROM nossos_servicos;
